{
  "name": "mv2-react-client",
  "version": "0.0.1",
  "private": true,

  "dependencies": {
    "react": "15.4.2",
    "react-dom": "15.4.2",
    "react-addons-pure-render-mixin": "15.4.2",
    "react-router": "3.0.2",
    "lodash": "4.17.4",
    "reactify": "1.1.1",
    "browserify": "14.1.0",
    "watchify": "3.9.0",
    "uglify-js": "2.8.5",
    "react-input-mask": "0.7.7",
    "decimal.js": "7.1.1",
    "throttle-debounce": "1.0.1"
  },

  "scripts": {
    "watch": "watchify components/router.jsx -t reactify -d -v -o ../frontend/core/static/react-client/build.js",
    "buildjs": "NODE_ENV=production browserify -t reactify components/router.jsx | uglifyjs -cm > ../frontend/core/static/react-client/build.min.js",
    "collectstatic": "django-admin.py collectstatic --noinput",
    "build_time": "nodejs set_last_build_time.js",
    "build": "npm run buildjs && npm run collectstatic && npm run build_time"
  }
}
